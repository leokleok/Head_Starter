<div class="registration">

<h1>Sign up</h1>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label " " %><br />
    <%= f.text_field :first_name, :autofocus => true, placeholder: "First Name"  %>
  </div>

  <div class="field">
    <%= f.label  " "%><br />
    <%= f.text_field :last_name, :autofocus => true, placeholder: "Last Name"  %>
  </div>

  <div class="field">
    <%= f.label  " " %><br />
    <%= f.text_field :user_name, :autofocus => true, placeholder: "User Name"  %>
  </div>

  <div class="field">
    <%= f.label  " "%><br />
    <%= f.email_field :email, autofocus: true, placeholder: "Email"  %>
  </div>

  <div class="field">
    <%= f.label  " " %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %>
  </div>

  <div class="field">
    <%= f.label " " %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>
  </div> <br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
