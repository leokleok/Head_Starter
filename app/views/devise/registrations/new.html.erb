<div align="center">

<h1>Sign up</h1>

<br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <div class="input-group">
    <!-- <%= f.label " " %><br /> -->
    <span class="input-group-addon"><i class="fa fa-user"></i></i>
    <%= f.text_field :first_name, :autofocus => true, placeholder: "First Name"  %></span>
  </div>
</div>

<div class="form-group">
  <div class="input-group">
    <!-- <%= f.label  " "%><br /> -->
    <span class="input-group-addon"><i class="fa fa-user"></i></i>
    <%= f.text_field :last_name, :autofocus => true, placeholder: "Last Name"  %></span>
  </div>
</div>

<div class="form-group">
  <div class="input-group">
    <!-- <%= f.label  " " %><br /> -->
    <span class="input-group-addon"><i class="fa fa-user"></i></i>
    <%= f.text_field :user_name, :autofocus => true, placeholder: "User Name"  %></span>
  </div>
</div>

<div class="form-group">
  <div class="input-group">
    <!-- <%= f.label  " "%><br /> -->
    <span class="input-group-addon"><i class="fa fa-envelope-o fa-1x"></i>
    <%= f.email_field :email, autofocus: true, placeholder: "Email"  %></span>
  </div>
</div>

<div class="form-group">
  <div class="input-group">
    <!-- <%= f.label  " " %> -->
    <span class="input-group-addon">
 <i class="fa fa-key fa-1x"></i>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %> <br><br>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /></span>
  </div>
</div>

<div class="form-group">
  <div class="input-group">
    <!-- <%= f.label " " %><br /> -->
      <span class="input-group-addon"> <i class="fa fa-key fa-1x"></i>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %></span>
  </div>
</div> <br>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
